@using EntityLayer.Concrete
@model List<AppUser>
@{
	ViewData["Title"] = "UserRoleList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kullanıcı Rol Listesi</h1>

<table class="table table-bordered">
	<tr>
		<td>Kullanıcı</td>
		<td>Rol Ata</td>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.UserName</td>
			<td><a href="/Admin/AdminRole/AssignRole/@item.Id" class="btn btn-primary">Rol Ata</a></td>
		</tr>
	}
</table>
<a href="/Admin/AdminRole/Index/" class="btn btn-outline-success">Rol Listesine Dön</a>