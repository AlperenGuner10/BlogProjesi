@using BlogProje.Models
@model RoleUpdateViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
	ViewData["Title"] = "UpdateRole";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rol Düzenleme Sayfası</h1>
<form method="post">
	<div class="form-group">
		<label>Role ID</label>
		<input type="text" asp-for="Id" class="form-control">
	</div>
	<div class="form-group">
		<label>Role Başlığı</label>
		<input type="text" asp-for="name" class="form-control">
	</div>

	<button class="btn btn-success">Rolü Güncelle</button>
</form>
