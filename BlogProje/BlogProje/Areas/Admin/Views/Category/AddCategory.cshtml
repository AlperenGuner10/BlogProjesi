@model EntityLayer.Concrete.Category

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Kategori Girişi</h1>
<br>
@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
	@Html.Label("Kategori Başlığı")
	@Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
	@Html.ValidationMessageFor(x => x.CategoryName)
	<br>
	@Html.Label("Kategori Açıklaması")
	@Html.TextAreaFor(x => x.CategoryDesc, 15, 3, new { @class = "form-control" })
	@Html.ValidationMessageFor(x => x.CategoryDesc)
	<br>
	<button class="btn btn-primary">Kategoriyi Kaydet</button>
}

