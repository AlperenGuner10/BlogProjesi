@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
                <br />
                <input asp-for="WriteID" type="hidden" />
                <div class="forms-sample">
                    <div class="form-group">
                        <label asp-for="WriteName">Yazar Ad Soyad</label>
                        <input asp-for="WriteName" class="form-control" />
                        <span asp-validation-for="WriteName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WriterMail">Mail Adresi</label>
                        <input asp-for="WriterMail" class="form-control" />
                        <span asp-validation-for="WriterMail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WriterPassword">Şifre</label>
                        <input asp-for="WriterPassword" type="password" class="form-control" />
                        <span asp-validation-for="WriterPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Yazar Görseli</label>
                        <input type="file" name="WriteImage" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="WriteAbout">Yazar Hakkında</label>
                        <textarea asp-for="WriteAbout" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="WriteAbout" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                    <button type="reset" class="btn btn-light">İptal</button>
                </div>
            </div>
        </div>
    </div>
</form>
