<!DOCTYPE html>
<html lang="zxx">
<body>
    <!--//banner-->
    <section class="banner-bottom">
        <!--/blog-->
        <div class="container">
            <div class="row">
                <!--left-->
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                    @foreach (var item in Model)
                    {
                        <div class="blog-grid-top">
                            <div class="b-grid-top">
                                <div class="blog_info_left_grid">
                                    <a href="#">
                                        <img src="~/BlogTema/web/images/b1.jpg" class="img-fluid" alt="">
                                    </a>
                                </div>
                                <div class="blog-info-middle">
                                    <ul>
                                        <li>
                                            <a href="#">
                                                <i class="far fa-calendar-alt"></i>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))
                                            </a>
                                        </li>
                                        <li class="mx-2">
                                            <a href="#">
                                                <i class="far fa-thumbs-up"></i> 0 Beğeni
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="far fa-comment"></i> 0 Yorum
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <h3>
                                <a href="#">@item.BlogTitle </a>
                            </h3>
                            <p>
                                @item.BlogContent
                            </p>
                            <a href="/Blog/Index/" class="btn btn-primary read-m">Blog Listesi</a>
                        </div>
                    }

                    @await Component.InvokeAsync("_CommentListByBlog", new { id = ViewBag.i })
                    @* @await Html.PartialAsync("~/Views/Comment/CommentListByBlog.cshtml") *@
                    @await Html.PartialAsync("~/Views/Comment/PartialAddComment.cshtml")

                </div>
                <!--//left-->
                <!--right-->
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    <div class="right-blog-info text-left">
                        <div class="tech-btm">
                            <img src="~/BlogTema/web/images/banner1.jpg" class="img-fluid" alt="">
                        </div>
                        <h4>Mail ile Abone Olun!!</h4>
                        @await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")

                        @await Component.InvokeAsync("_CategoryList")

                        @await Component.InvokeAsync("_WriterLastBlog")

                    </div>

                </aside>
                <!--//right-->
            </div>
        </div>
    </section>
    <!--//main-->
</body>

</html>
